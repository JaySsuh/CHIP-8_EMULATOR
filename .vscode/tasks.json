{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MSYS2 Build CHIP-8 Emulator",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-IC:/msys64/mingw64/include/SDL2",
        "main.cpp",
        "chip8.cpp",
        "platform.cpp",
        "-LC:/msys64/mingw64/lib",
        "-lSDL2main",
        "-lSDL2",
        "-o",
        "chip8.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build CHIP-8 emulator using MSYS2 g++ and SDL2"
    }
  ]
}
